@model IEnumerable<ASP.NET_CRUD_APP.Models.Trip>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartingMiles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndingMiles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalMiles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stops)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pallets)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartingMiles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndingMiles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalMiles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stops)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pallets)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
